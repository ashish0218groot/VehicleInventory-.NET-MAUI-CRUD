<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VehicleInventory.Views.CarDetailsPage"
             xmlns:vm="clr-namespace:VehicleInventory.ViewModels"
             Title="{Binding Car.Model}"
             x:DataType="vm:CarDetailsViewModel" >
    <VerticalStackLayout>
        <Label 
            Text="{Binding Car.Vin}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="Medium" />
    </VerticalStackLayout>
</ContentPage>